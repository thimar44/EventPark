@model EventPark.Models.EvenementViewModel

@{
    ViewBag.Title = "Detail";
}

<style>
    #map {
        height: 400px;
        width: 100%;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h4 class="event-title"> @Html.DisplayFor(model => model.Titre)</h4>
        </div>
        <div class="col-md-2">
            <h4> @Html.DisplayFor(model => model.Tarif)€</h4>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            @*@foreach (var image in Model.Images)
                {
                    <img class="" src="@image.Url" alt="Card image cap">
                }*@


            <div id="MonCarousel" class="carousel slide" data-ride="carousel">

                <!-- Indicators -->
                <ul class="carousel-indicators">
                    <li data-target="#MonCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#MonCarousel" data-slide-to="1"></li>
                    <li data-target="#MonCarousel" data-slide-to="2"></li>
                </ul>

                <!-- The slideshow -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://cdn-s-www.estrepublicain.fr/images/B02D234B-C642-4285-BCD6-C7A1DD61B2AB/LER_22/christian-guinchard-a-prepare-une-tonne-de-saucisses-pour-l-evenement-1462728049.jpg" alt="Los Angeles">
                    </div>
                    <div class="carousel-item">
                        <img src="https://static.ladepeche.fr/content/media/image/large/2015/07/23/201507231232-full.jpg" alt="Chicago">
                    </div>
                    <div class="carousel-item">
                        <img src="https://i.ytimg.com/vi/IjQlNRGX4jA/maxresdefault.jpg" alt="New York">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#MonCarousel" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#MonCarousel" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>

            </div>
        </div>
    </div>




    <div class="row">
        <div class="col-md-12">
            <p>
                @Html.DisplayFor(model => model.Adresse.Rue),@Html.DisplayFor(model => model.Adresse.CodePostal), @Html.DisplayFor(model => model.Adresse.Ville)
            </p>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <p>
                @Html.DisplayFor(model => model.DateDebut), @Html.DisplayFor(model => model.DateFin)
            </p>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <p> @Html.DisplayFor(model => model.Descrition)</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div id="map"></div>
            <script>
                function initMap() {
                    
                    var uluru = { lat: 46.670706, lng: -1.426700 };
                    var map = new google.maps.Map(document.getElementById('map'), {
                        zoom: 12,
                        center: uluru
                    });
                    var marker = new google.maps.Marker({
                        position: uluru,
                        map: map
                    });

                    var marker = new google.maps.Marker({
                        position: { lat: -25.363, lng: 131.045 },
                        map: map,
                        icon: 'http://maps.google.com/mapfiles/ms/icons/green-dot.png',
                        label: "uluru2"
                    });

                }
            </script>
            <script async defer
                    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAXEJ9Kcn0hWuIFxXRK6E5QwjMjb9_n9Ew&callback=initMap">
            </script>
        </div>
    </div>


    @{
        string url = "https://www.google.com/maps/embed/v1/place?key=AIzaSyDRcX-jIZfNUkv60rhhzHO-mDHy2ZK-Imk&q=" + @Html.DisplayFor(model => model.Adresse.UrlGoogle);
        //url qui fonctionne = "https://www.google.com/maps/embed/v1/place?key=AIzaSyDRcX-jIZfNUkv60rhhzHO-mDHy2ZK-Imk&q=place+napoleon+85000+La+Roche-sur-Yon";
    }

    <div class="row iframeGoogleRow">

        <iframe width="600"
                height="450"
                frameborder="0" style="border:0"
                src=@url allowfullscreen></iframe>

    </div>
</div>
