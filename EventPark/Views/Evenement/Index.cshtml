@model IEnumerable<EventPark.Models.EvenementViewModel>

@if (@User.Identity.IsAuthenticated)
{
    if (@User.IsInRole("Admin"))
    {
        <div class="newEvent">
            @Html.ActionLink("Create New", "Create", "Evenement", new { @class = "btn btn-success btn-block" })
        </div>
    }
}

<div class="card-deck">
    @foreach (var item in Model)
    {
        <div id="ficheEvenement" class="col-xl-3 col-lg-4 col-md-6">
            <div class="card h-100 d-flex flex-column justify-content-between">
                <div class="card-header">
                    <h4 class="card-title"> @Html.DisplayFor(modelItem => item.Titre)</h4>
                </div>

                @{var src = "https://mdbootstrap.com/img/Photos/Others/images/16.jpg";}
                @if (item.Images.Count > 0)
                {
                    foreach (var img in item.Images)
                    {
                        if (img.IsDefault)
                        {
                            src = "../../" + img.Url;
                        }
                    }
                }
                <img class="card-img-top" src=@src alt="Card image cap">


                <div class="card-body">
                    @if (item.Tarif > 0)
                    {
                        <p class="card-text tarif"> @Html.DisplayFor(modelItem => item.Tarif) €</p>
                    }
                    else
                    {
                        <p class="card-text tarif">Gratuit</p>
                    }
                    <p class="card-text">
                        Du: @Html.DisplayFor(modelItem => item.DateDebut)
                        au: @Html.DisplayFor(modelItem => item.DateFin)
                    </p>
                    <p>
                        @Html.DisplayFor(modelItem => item.Adresse.Libelle)
                    </p>
                    <p>
                        @Html.DisplayFor(modelItem => item.Adresse.Rue)
                    </p>
                    <p>
                        @Html.DisplayFor(modelItem => item.Adresse.CodePostal)
                        @Html.DisplayFor(modelItem => item.Adresse.Ville)
                    </p>           
                </div>

                <div class="card-footer">
                    @if (@User.Identity.IsAuthenticated)
                    {
                        if (@User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Modifier", "Edit", "Evenement", new { id = item.id }, new { @class = "btn btn-warning btn-large" })
                            @Html.ActionLink("Supprimer", "Delete", "Evenement", new { id = item.id }, new { @class = "btn btn-danger btn-large" })
                        }
                    }

                    @Html.ActionLink("Détail", "Details", "Evenement", new { id = item.id }, new { @class = "btn btn-primary btn-large" })

                </div>
            </div>
        </div>
    }
</div>
